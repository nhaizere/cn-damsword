<script>
    $(function () {
        var trimRegex = /^\/|\/$/g;
        var location = document.location.pathname.trim().replace(trimRegex, '').toLowerCase();
        var $active = $('.navbar li:has(a)').filter(function () {
            var currentHref = $(this).children('a').attr('href');
            if (currentHref === undefined)
                return false;

            var href = (currentHref || '').trim().replace(trimRegex, '').toLowerCase();
            return href === location;
        });

        $active.addClass('active');
    });
</script>
