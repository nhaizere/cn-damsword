@model DamSword.Web.Models.Account.LoginViewModel
@{
    ViewBag.Title = "Authentication | SoD";
}

<div class="row">
    <div class="col-lg-offset-5 col-lg-3 col-md-offset-3 col-md-6">
        <h1>
            <strong>
                <i>Sword of Damocles</i>
            </strong>
            <br />
            <small>Authentication</small>
        </h1>
    </div>
</div>

@if (Model.InvalidCredentials)
{
    <div class="row">
        <div class="col-lg-offset-5 col-lg-3 col-md-offset-3 col-md-6">
            <p><strong class="text-danger">Invalid Credentials</strong></p>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-offset-5 col-lg-3 col-md-offset-3 col-md-6">
        <form action="/account/login" method="POST" data-toggle="validator">
            <input type="hidden" id="ReturnUrl" name="ReturnUrl" />

            <div class="form-group">
                <label for="Login">Login</label>
                <input type="text" id="Login" name="Login" class="form-control" placeholder="Login" data-minlength="5" required />
                <p class="help-block with-errors"></p>
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" data-minlength="6" required />
                <p class="help-block with-errors"></p>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-default pull-right">Enter to System</button>
            </div>
        </form>
    </div>
</div>
